<!DOCTYPE html>
<html>
    <head>
        <meta name=”viewport” content=”width=device-width, initial-scale=1″>
        <title>The Color Green Login</title>
        <link rel="shortcut icon" type="image/x-icon" href="../images/favicon (2).ico" />
            <link rel="stylesheet" type="text/css"href="../../styles/comments.css">
    </head>
    <body>

    <div class="post-container">
        <h3><%= post.text.substring(0, 200) %></h3>
    </div>
    <hr>
        <% if(currentUser){ %>
            <div class="add-comment">
                <img src="<%= currentUser.image %>">
                <form action="/post/<%= post._id %>/comment" method="post">
                    <input type="text" name="comment[text]" required placeholder="add a public comment">
                </form>
            </div>
        <% } %>

        <div id="comments">
            <!--<a href="/post/<%=// post._id %>/comment/new">comment</a>-->
            <% post.comments.forEach(function(comment){ %>
                <div class="comment">
                    <strong><a href="/user/<%= comment.owner.id %>"><%= comment.owner.username %></a></strong>
                    <span><%= moment(comment.created).startOf('second').fromNow() %></span>
                    <div class="comment-body">
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <hr>
            <% }) %>
        </div>
        
        
    </body>
</html>

