<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>following</title>
    <link rel="stylesheet" type="text/css"href="../../styles/users.css">
  </head>
  <body>
    <style media="screen">
      body{
        background: #aaa;
      }
    </style>
    <h1 class="top">Following</h1>

    <% user.following.forEach(function(following){ %>
      <a href="/user/<%= following._id %>">
        <div class="user">
            <div class="profile-img">
              <img src="<%= following.image %>">
            </div>
            <div class="name">
              <h2><%= following.username %></h2>
            </div>
        </div>
      </a>
      <% }); %>
  </body>
</html>
